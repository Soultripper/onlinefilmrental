<% providers = PostProvider.limited %>

<div class="header">
    <h3 data-toggle="collapse" data-target="#bypostLimited">By Post - <font class="large">Limited</font></h3>
    <h4>Sites that offer limited rentals per month, by post, for a lower monthly fee</h4>
</div>
<div id="bypostLimited" class="collapse in">
    <table class="table">
        <thead>
            <tr>
                <th>Provider</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Trial Period</th>
                <th style="vertical-align: middle"></th>
            </tr>
        </thead>
        <tbody>
        <% providers.each do |provider| %>
            <tr>
                <td><%= link_to image_tag("core/logos/#{provider.film_provider.image_uri}"), provider.film_provider.uri %>
                </td>
                <td><%= render partial:"by_post_limited_data", locals:{disc:provider.one} %> </td>
                <td><%= render partial:"by_post_limited_data", locals:{disc:provider.two} %> </td>
                <td><%= render partial:"by_post_limited_data", locals:{disc:provider.three} %> </td>
                <td><%= provider.film_provider.trial_period %></td>
                <td> <%= link_to 'Sign up', provider.film_provider.uri, class:'button-link' %> </td>
            </tr>
        <% end %>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6"></td>
            </tr>
        </tfoot>
    </table>
</div>
