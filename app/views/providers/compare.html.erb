          <li class="odd"><span>3 Discs</span></li>
          <li class="even"><span>Trial Period</span></li>
          <li class="odd"><span>Games Option</span></li>
          <li class="pricing_footer"></li>  
      </ul>

      <div class="pricing_hover_area">
        <%= render template:'providers/_by_post_limited'%>   
      </div>
    </div>
  </div>
</div>
